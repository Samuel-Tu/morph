{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "moduleResolution": "Bundler",
    "noUnusedLocals": true
  },
  "include": [
    "env.d.ts",
    "packages/**/*.ts",
    "packages/**/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue"
  ]
}
